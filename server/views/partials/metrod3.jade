div
    div.jumbotron
        h1 {{title}}
div
    div.col-xs-12.text-center
        select(ng-model="lineSearch" ng-change="selection(lineSearch)")
            option(ng-repeat="(key, value) in lineColors" value="{{key}}") {{value}}
    div.lead.col-xs-12.text-center
        h2.col-xs-6 {{line}}
        div.col-xs-6
            h2 {{stations.length}}
            p(ng-show="stations.length") results
    table.col-xs-12.text-center
        thead
            tr
                th.text-center.col-xs-4 City
                th.text-center.col-xs-4 Code
                th.text-center.col-xs-4 Name
        tbody
            tr(ng-repeat='station in stations')
                td {{station.Address.City}}
                td {{station.Code}}
                td {{station.Name}}
    div.col-xs-12
        hr
        a(href='/') Back to Search